<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <include
        layout="@layout/pp_toolbar"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="108dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:text="아이디 : "
        android:textColor="#111111"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edtJoinId"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:background="@drawable/edt_outline"
        android:hint="아이디"
        android:includeFontPadding="false"
        android:maxLength="50"
        android:padding="10dp"
        android:textColor="#111111"
        android:textSize="16dp"
        android:text="dummy"/>




    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="108dp"
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 : "
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="18dp"/>


    <EditText
        android:id="@+id/edtJoinNickname"
        android:padding="10dp"
        android:background="@drawable/edt_outline"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:maxLength="12"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="16dp"
        android:hint="닉네임"
        android:text="dummy"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="42dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:text="다른 사용자에게 보여질 닉네임입니다."
        android:textColor="#626262"
        android:textSize="12dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 : "
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/edtJoinPass"
        android:padding="10dp"
        android:background="@drawable/edt_outline"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:maxLength="16"
        android:inputType="textPassword"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="16dp"
        android:hint="비밀번호"
        android:text="dummy"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="74dp"
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 재확인 : "
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/edtJoinPassChk"
        android:padding="10dp"
        android:background="@drawable/edt_outline"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:maxLength="16"
        android:inputType="textPassword"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="16dp"
        android:hint="비밀번호 재확인"
        android:text="dummy"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="120dp"
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/edtJoinAddress"
        android:padding="10dp"
        android:background="@drawable/edt_outline"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="16dp"
        android:hint="주소를 입력"
        android:text="19900724"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="36dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:text="고객님의 지역을 확인하는데 필요합니다."
        android:textColor="#626262"
        android:textSize="12dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="102dp"
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화 번호"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/edtJoinPN"
        android:padding="10dp"
        android:background="@drawable/edt_outline"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:maxLength="50"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="16dp"
        android:hint="전화번호"
        android:text="dummy"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:text="고객님이 사용중인 휴대 전화 번호를 알려주세요."
        android:textColor="#626262"
        android:textSize="12dp" />

    <android.widget.Button
        android:id="@+id/btnJoin"
        android:layout_marginTop="15dp"
        android:layout_width="288dp"
        android:layout_height="47dp"
        android:background="@drawable/edt_outline"
        android:backgroundTint="#796BCF"
        android:fontFamily="@font/notosans_regular"
        android:text="회원가입"
        android:includeFontPadding="false"
        android:textColor="#fdfdfd"
        android:textSize="16dp"
        android:layout_marginBottom="30dp"
        />


</LinearLayout>
</ScrollView>