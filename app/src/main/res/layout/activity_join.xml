<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <include
        layout="@layout/pp_toolbar"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="108dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:text="이메일 : "
        android:textColor="#111111"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edtJoinEmail"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:background="@drawable/edt_outline"
        android:hint="이메일"
        android:includeFontPadding="false"
        android:maxLength="50"
        android:padding="10dp"
        android:textColor="#111111"
        android:textSize="16dp"
        android:text="dummy@naver.com"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:text="아이디 대신 사용될 이메일 주소입니다."
        android:textColor="#626262"
        android:textSize="12dp" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="108dp"
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 : "
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="18dp"/>


    <EditText
        android:id="@+id/edtJoinNickname"
        android:padding="10dp"
        android:background="@drawable/edt_outline"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:maxLength="12"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="16dp"
        android:hint="닉네임"
        android:text="dummy"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="42dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:text="다른 사용자에게 보여질 닉네임입니다."
        android:textColor="#626262"
        android:textSize="12dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 : "
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/edtJoinPass"
        android:padding="10dp"
        android:background="@drawable/edt_outline"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:maxLength="16"
        android:inputType="textPassword"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="16dp"
        android:hint="비밀번호"
        android:text="dummy"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="74dp"
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 재확인 : "
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/edtJoinPassChk"
        android:padding="10dp"
        android:background="@drawable/edt_outline"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:maxLength="16"
        android:inputType="textPassword"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="16dp"
        android:hint="비밀번호 재확인"
        android:text="dummy"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일 : "
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/edtJoinBirth"
        android:padding="10dp"
        android:background="@drawable/edt_outline"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:maxLength="8"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="16dp"
        android:hint="19980514 형식으로 입력"
        android:text="19900724"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="36dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:text="고객님의 생일을 관리하는데 사용됩니다."
        android:textColor="#626262"
        android:textSize="12dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="116dp"
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 : "
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/edtJoinName"
        android:padding="10dp"
        android:background="@drawable/edt_outline"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:maxLength="50"
        android:includeFontPadding="false"
        android:textColor="#111111"
        android:textSize="16dp"
        android:hint="이름"
        android:text="dummy"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="64dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:text="고객님의 실명을 입력하세요."
        android:textColor="#626262"
        android:textSize="12dp" />

    <android.widget.Button
        android:id="@+id/btnJoin"
        android:layout_marginTop="15dp"
        android:layout_width="288dp"
        android:layout_height="47dp"
        android:background="@drawable/edt_outline"
        android:backgroundTint="#796BCF"
        android:fontFamily="@font/notosans_regular"
        android:text="회원가입"
        android:includeFontPadding="false"
        android:textColor="#fdfdfd"
        android:textSize="16dp"
        android:layout_marginBottom="30dp"
        />


</LinearLayout>
</ScrollView>