<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/galleryRecyclerItemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#34568A">

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/galleryRecyclerItemHeader"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">

        <TextView
            android:id="@+id/griHeaderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:text="오늘"
            android:textColor="#fdfdfd"
            android:textSize="22dp" />
    </LinearLayout>

    <View
        android:layout_gravity="center_horizontal"
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:background="#fdfdfd"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/galleryIV1"
            android:layout_width="180dp"
            android:layout_height="180dp"/>

        <ImageView
            android:id="@+id/galleryIV2"
            android:layout_marginLeft="10dp"
            android:layout_width="180dp"
            android:layout_height="180dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/galleryIV3"
            android:layout_width="180dp"
            android:layout_height="180dp"/>

        <ImageView
            android:id="@+id/galleryIV4"
            android:layout_marginLeft="10dp"
            android:layout_width="180dp"
            android:layout_height="180dp"/>
    </LinearLayout>

    <android.widget.Button
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/suggestItemBtn"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/edt_outline"
        android:backgroundTint="#68B6E8"
        android:text="관련 핀 모아보기"
        android:fontFamily="@font/notosans_regular"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:textColor="#fdfdfd"
        android:textSize="16dp"
        />



</LinearLayout>